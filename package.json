{
  "name": "rgh-store-ftp",
  "version": "1.1.4",
  "description": "RGH STORE FTP - Xbox 360 RGH Manager",
  "main": "main.js",
  "author": "Nickolas Bressy",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.rghstoreftp.app",
    "productName": "RGH STORE FTP",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "lanpobre",
        "repo": "OpenSource-RGHSTOREFTP"
      }
    ]
  },
  "dependencies": {
    "basic-ftp": "^5.0.4",
    "node-stream-zip": "^1.15.0",
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs"
}
